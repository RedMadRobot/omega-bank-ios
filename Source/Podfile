platform :ios, '12.0'
use_frameworks!
inhibit_all_warnings!

#Библиотеки располагаются в алфавитном порядке
def main_pods
  pod 'AlamofireImage'
  pod 'InputMask'
  pod 'KeychainAccess'
  pod 'SwiftLint'
  pod 'SwiftGen'
end

target 'OmegaBank' do
  project 'OmegaBank.xcodeproj'
  main_pods
end

target 'OmegaBankSwiftUI' do
  project 'OmegaBank.xcodeproj'
  main_pods
end

target 'OmegaBankAPI' do
  use_frameworks!

  pod 'Alamofire', '~> 4.8'

  target 'OmegaBankAPITests' do
    inherit! :search_paths
  end
end

target 'OmegaBankUITests' do
  project 'OmegaBank.xcodeproj'
  pod 'Catbird'
end

# https://www.jessesquires.com/blog/2020/07/20/xcode-12-drops-support-for-ios-8-fix-for-cocoapods/
post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings.delete 'IPHONEOS_DEPLOYMENT_TARGET'
    end
  end
end
